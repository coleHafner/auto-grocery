{
    "manifest_version": 2,
    "name": "Auto Grocery",
    "description": "Translate recipes directly to your grocery list",
    "version": "0.2",
    // "browser_action": {
    "page_action": {
        "default_icon": "icon.png",
        "default_title": "Auto Grocery - Translate recipes directly to your grocery list",
        "default_popup": "popup.html"
    },
    "permissions": [
        "storage",
        "activeTab",
        "declarativeContent"
    ],
     "content_scripts": [{
        "matches": ["https://www.blueapron.com/*", "http://allrecipes.com/*"],
        "js": ["bundles/recipe-scraper.bundle.js"]
    }],
    "background": {
        "scripts": ["background.js"]
    },
    "web_accessible_resources": [
        "options.html"
    ],
    "options_ui": {
        "page": "options.html",
        "chrome_style": true,
        "open_in_tab": true
    }
}