{
    "manifest_version": 2,
    "name": "Auto Grocery",
    "description": "Translate recipes directly to your grocery list",
    "version": "0.1",
    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "Auto Grocery - Translate recipes directly to your grocery list",
        "default_popup": "popup1.html"
    },
    "permissions": [
        "tabs",
        "storage",
        "activeTab",
        "declarativeContent"
    ],
     "content_scripts": [{
        "matches": ["https://www.blueapron.com/*"],
        "js": ["libs/jquery-3.2.1.min.js", "content.js"]
    }]
}